---
import GitHub from "./icons/Github.astro"
import NextJS from "./icons/Nextjs.astro"
import Python from "./icons/Python.astro"
import MongoDB from "./icons/MongoDb.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import ReactIcon from "./icons/React.astro"
import HTMLIcon from "./icons/Html.astro"
import CSSIcon from "./icons/Css.astro"
import JavaScriptIcon from "./icons/JavasScript.astro"
import SupabaseIcon from "./icons/Supabase.astro"
import PentestingIcon from "./icons/Pentesting.astro"
import MetasploitIcon from "./icons/Metaexploit.astro"

import { Image } from 'astro:assets';

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PYTHON: {
    name: "Python",
    class: "bg-yellow-600 text-white",
    icon: Python, 
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-green-600 text-white",
    icon: MongoDB, 
  },
  REACT: {
    name: "React",
    class: "bg-cyan-500 text-white",
    icon: ReactIcon, 
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-500 text-white",
    icon: HTMLIcon, 
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 text-white",
    icon: CSSIcon, 
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-black",
    icon: JavaScriptIcon, 
  },
  SUPABASE: {
    name: "Supabase",
    class: "bg-purple-600 text-white",
    icon: SupabaseIcon, 
  },
  PENTESTING: {
    name: "Pentesting",
    class: "bg-red-600 text-white",
    icon: PentestingIcon, 
  },
  METASPLOIT: {
    name: "Metasploit",
    class: "bg-gray-700 text-white",
    icon: MetasploitIcon, 
  },
};

const PROJECTS = [
  {
    title: "Simulador de Nutrición",
    description:
      "Aplicación diseñada para simular la nutrición enteral y optimizar los cálculos nutricionales, proporcionando a los nutricionistas una herramienta precisa y eficiente para planificar tratamientos personalizados.",
    link: "https://github.com/DoubtfulCafe/backend_simulacion",
    image: "/images/NutriSim.png",
    tags: [TAGS.PYTHON, TAGS.MONGODB, TAGS.REACT],
  },
  {
    title: "Landing Page para Empresa de Tecnología",
    description:
      "Diseño y desarrollo de una landing page para promover ventas de aparatos tecnológicos.",
    link: "https://github.com/DoubtfulCafe/Proyecto-Frontend",
    image: "/images/TecnoMarket.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Página de Adopción de Mascotas",
    description:
      "Plataforma que conecta mascotas en adopción con posibles dueños responsables.",
    link: "https://adopcion-sigma.vercel.app/Landing",
    image: "/images/Petfinder.png",
    tags: [TAGS.NEXT, TAGS.SUPABASE],
  },
  {
    title: "NicaSecurity (Voluntario)",
    description:
      "Proyecto voluntario enfocado en conferencias, planificación y consultoría en ciberseguridad.",
    link: "https://www.facebook.com/profile.php?id=61559154643121",
    image: "/images/NicaSec.jpg",
    tags: [TAGS.PENTESTING, TAGS.METASPLOIT],
  },
];

---

<div class="flex flex-col gap-y-16">
  {PROJECTS.map(({ image, title, description, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <Image 
            alt={title}
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" 
            loading="lazy"
            src={image}
            width={500}
            height={300}
          />
        </div>
      </div>
      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                  {tag.icon && <tag.icon class="size-4" />}
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))}
</div>
