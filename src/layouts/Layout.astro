---
// Layout.astro
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/onest';

const { title = "Daniel Villeda" } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Portafolio de Daniel Villeda" />
    <title>{title}</title>
  </head>
  <body >
	<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 
	[background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">	</div>
    <Header />

      <slot />
    
	  <Footer />

  </body>
</html>

